<div class="col-md-4 col-md-offset-4">
    <h2>新增图书组</h2>

    <hr>
    <%= form_for @group do |f| %>

    <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

    图书类别
    <%= f.text_field :title %>
    <br>
    图书简介
    <br>
    <%= f.text_area :description %>
    <br>

    <%= f.submit "确认", :disable_with => 'Submitting...' %>
    <% end %>

</div>
